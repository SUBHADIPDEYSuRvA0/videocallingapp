<!DOCTYPE html>
<html>
<head>
  <title>Video Call</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background-color: #f0f0f0;
    }

    h1 {
      text-align: center;
      padding: 10px;
    }

    #videoContainer {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding: 20px;
    }

    #localVideo {
      width: 65%;
      height: auto;
      border: 2px solid #000;
    }

    #remoteVideos {
      width: 30%;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .remoteVideo {
      width: 100%;
      height: auto;
      border: 2px solid #555;
    }

    #hangupBtn {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #ff4d4d;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #hangupBtn:hover {
      background-color: #cc0000;
    }
  </style>
</head>
<body>
  <input type="hidden" id="roomId" value="<%= code %>" />
  <h1>Room: <%= code %></h1>

  <div id="videoContainer">
    <video id="localVideo" autoplay muted></video>
    <div id="remoteVideos">
      <!-- remote videos will be appended here -->
    </div>
  </div>

  <button id="hangupBtn">Hang Up</button>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/webrtc.js" defer></script>
</body>
</html>
